<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>mod_social</name>
	<author>Tiago Garcia</author>
	<creationDate>04/08/2012</creationDate>
	<copyright>Copyright (C) 2012 AtomTech, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>tiago@atomtech.com.br</authorEmail>
	<authorUrl>http://www.atomtech.com.br</authorUrl>
	<version>2.5.0</version>
	<description>MOD_SOCIAL_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_social">mod_social.php</filename>
		<folder>tmpl</folder>
		<filename>mod_social.xml</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="language">
		<language tag="pt-BR">pt-BR/pt-BR.mod_social.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_social.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="twitter" type="text" class="inputbox" label="MOD_SOCIAL_FIELD_TWITTER_LABEL" description="MOD_SOCIAL_FIELD_TWITTER_DESC" />
				<field name="facebook" type="text" class="inputbox" label="MOD_SOCIAL_FIELD_FACEBOOK_LABEL" description="MOD_SOCIAL_FIELD_FACEBOOK_DESC" />
				<field name="linkedin" type="text" class="inputbox" label="MOD_SOCIAL_FIELD_LINKEDIN_LABEL" description="MOD_SOCIAL_FIELD_LINKEDIN_DESC" />
				<field name="skype" type="text" class="inputbox" label="MOD_SOCIAL_FIELD_SKYPE_LABEL" description="MOD_SOCIAL_FIELD_SKYPE_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field name="cachemode" type="hidden" default="static">
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
